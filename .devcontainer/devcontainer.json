{
  "name": "EZ-WORKFLOW",
  "dockerComposeFile": ["docker-compose.yml"],
  "workspaceFolder": "/workspace",
  "service": "app",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "settings": {
        "#terminal.integrated.shell.linux": "/bin/bash",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "php.format.codeStyle": "Off",
        "php.suggest.basic": false,
        "php.completion.showParameters": true,
        "terminal.integrated.scrollback": 10000,
        "php-cs-fixer.onsave": true,
        "php-cs-fixer.executablePath": "/workspace/vendor/bin/php-cs-fixer",
        "php-cs-fixer.allowRisky": true,
        "phpstan.memoryLimit": "2G",
        "phpstan.binPath": "/workspace/vendor/bin/phpstan",
        "phpstan.singleFileMode": true,
        "php.debug.executablePath": "/usr/bin/php",
        "intelephense.environment.phpVersion": "8.1",
        "[php]": {
          "editor.defaultFormatter": "junstyle.php-cs-fixer"
        },
        "[xml]": {
          "editor.defaultFormatter": "redhat.vscode-xml"
        },
        "files.associations": {
          "*.neon": "yaml",
          "*.postman_collection": "json"
        }
      },
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "esbenp.prettier-vscode",
        "xdebug.php-debug",
        "redhat.vscode-xml",
        "DEVSENSE.phptools-vscode",
        "DEVSENSE.intelli-php-vscode",
        "editorconfig.editorconfig",
        "mikestead.dotenv",
        "christian-kohler.path-intellisense",
        "CoenraadS.bracket-pair-colorizer",
        "junstyle.php-cs-fixer",
        "SanderRonde.phpstan-vscode"
      ]
    }
  }

  // "postCreateCommand": "composer install && npm install"
}
